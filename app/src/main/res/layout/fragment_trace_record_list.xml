<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.boredream.koalatrace.ui.recordlist.TraceRecordListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.boredream.koalatrace.view.TitleBarView
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="所有轨迹" />

        <LinearLayout
            android:id="@+id/ll_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_bar">

            <com.boredream.koalatrace.view.SpinnerView
                android:id="@+id/spinner_date"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <com.boredream.koalatrace.view.SpinnerView
                android:id="@+id/spinner_area"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_bar" />
        </LinearLayout>

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_spinner" />

        <com.boredream.koalatrace.view.RefreshListView
            android:id="@+id/refresh_trace_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:dataList="@{vm.refreshListVMCompose.dataListUiState}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_divider"
            app:refreshState="@{vm.refreshListVMCompose.refreshUiState}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>